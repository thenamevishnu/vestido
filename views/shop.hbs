
    <div class="container mt-5 theme-color">
    <div class="row gap-2 text-center">
        
        <div class="col-10 col-md-2 offset-1">
           <div class="row gap-4">
                <div class="col-12 text-start p-3 border border-1">
                    <div class="mb-3">CATEGORIES</div>
                    <div><span class="theme-sec-color cursor-pointer" onclick="filterCategory('all')">ALL CATEGORIES</span></div>
                    {{#each data}}
                        <div class="d-flex justify-content-between"> <span class="theme-sec-color cursor-pointer" onclick="filterCategory('{{_id}}')">{{_id}}</span> <span>({{Total}})</span> </div>
                    {{/each}}
                </div>
                <div class="col-12 text-start p-3 border border-1">
                        <div class="mb-3">
                            FILTER BY PRICE
                        </div>
                        <div class="mb-3">
                           <select name="price_range" id="filter-price" oninput="filterPrice()" class="border border-0 price-range">
                                <option value="0-10000" {{#eq filter "-"}} selected {{/eq}}>ALL</option>
                                <option value="0-500" {{#eq filter "0-500"}} selected {{/eq}}>₹0 - ₹500</option>
                                <option value="500-1000" {{#eq filter "500-1000"}} selected {{/eq}}>₹500 - ₹1000</option>
                                <option value="1000-2000" {{#eq filter "1000-2000"}} selected {{/eq}}>₹1000 - ₹2,000</option>
                                <option value="2000-5000" {{#eq filter "2000-5000"}} selected {{/eq}}>₹2,000 - ₹5,000</option>
                                <option value="5000-10000" {{#eq filter "5000-10000"}} selected {{/eq}}>₹5,000 - ₹10,000</option>
                           </select>
                        </div>
                        <div class="mb-3">
                            SIZE
                        </div>
                        <div class="mb-3" id="size" onclick="filerSize()">
                            <input type="checkbox" name="size_s" id="S" {{#if S}} checked {{/if}}>&nbsp;<span class="theme-sec-color" >SMALL</span><br>
                            <input type="checkbox" name="size_m" id="M" {{#if M}} checked {{/if}}>&nbsp;<span class="theme-sec-color">MEDIUM</span><br>
                            <input type="checkbox" name="size_l" id="L" {{#if L}} checked {{/if}}>&nbsp;<span class="theme-sec-color">LARGE</span><br>
                            <input type="checkbox" name="size_xl" id="XL" {{#if XL}} checked {{/if}}>&nbsp;<span class="theme-sec-color">XL</span><br>
                            <input type="checkbox" name="size_xxl" id="XXL" {{#if XXL}} checked {{/if}}>&nbsp;<span class="theme-sec-color">XXL</span>
                        </div>
                        <div class="mb-3">
                            
                        </div>
                        
                </div>
           </div>
        </div>

        <div class="col-12 col-md-8 border border-0">
            <span class="text-start fs-5 float-start">SHOP ALL</span> 
            <select class="sort-select float-end w-25" name="sort" id="sort" oninput="sortShop()">
                <option value="latest" {{#eq sel "latest"}} selected {{/eq}}>LATEST</option>
                <option value="low-high" {{#eq sel "low-high"}} selected {{/eq}}>PRICE LOW TO HIGH</option>
                <option value="high-low" {{#eq sel "high-low"}} selected {{/eq}}>PRICE HIGH TO LOW</option>
            </select>
            
                <div class="row mt-5 gap-2 d-flex justify-content-center">
                {{#eq products ""}}
                
                    <div class="card border border-0 overflow hover-shop">
                
                <div class="card-body">
                    
                    <p class="fw-bold fs-5">No Products found!</p>
                </div>
                
                </div>
                    
                {{/eq}}
                {{#each products}}
                    
                        <div class="card border border-0 overflow hover-shop" style="width:14rem;">
                    <a href="/product_details/{{_id}}" class="text-decoration-none theme-color">
                        <img src="https://res.cloudinary.com/dhya4vcls/image/upload/{{photo.[0]}}" onmouseenter="this.src='https://res.cloudinary.com/dhya4vcls/image/upload/{{photo.[1]}}'" onmouseleave="this.src='https://res.cloudinary.com/dhya4vcls/image/upload/{{photo.[0]}}'" class="card-img-top pt-2" alt="{{title}}">
                    
                    <div class="card-body">
                        <div class="card-title">{{title}}</div>
                        <p class="fw-bold fs-5">₹{{price}}</p>
                    </div>
                    </a>
                    </div>
                    
                {{/each}}
            </div>
           <nav class="mt-5 d-flex justify-content-center">
    <ul class="pagination">
        {{#for pagination}}
        <li class="page-item me-2" onclick="paginationCount('{{this}}')">{{this}}</li>
        {{/for}}
    </ul>
</nav>
</div>
</div>
