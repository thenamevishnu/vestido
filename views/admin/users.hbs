{{!-- lap --}}

<div class="container-fluid d-none d-lg-block">
    <table class="table table-hover usermanage border border-1">
  <thead>
    <tr>
      <th scope="col">PHOTO</th>
      <th scope="col">NAME</th>
      <th scope="col">USERNAME</th>
      <th scope="col">PHONE</th>
      <th scope="col">EMAIL</th>
      <th scope="col">ADDRESS</th>
      <th scope="col">ACTION</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    {{#if blocked}}
        <tr style="background-color:rgb(255, 116, 116);">
            <td><i class="fa fa-user"></i></td>
            <td>{{first_name}} {{last_name}}</td>
            <td>@{{username}}</td>
            <td>{{phone}}</td>
            <td>{{email}}</td>
            <td>{{address.[0].address}}</td>
            <td>
                <a onclick="return confirm('Are you sure to unblock @{{username}} ?')" href="/admins/unblock_user/{{_id}}" role="button" class="btn btn-success"><i class="fa fa-unlock" title="unblock"></i></a>
                <a onclick="return confirm('Are you sure to delete @{{username}} ?')" href="/admins/delete_user/{{_id}}" role="button" class="btn btn-danger"><i class="fa fa-trash" title="delete"></i></a>
            </td>
        </tr>
    {{else}}        
                
            <tr>
            <td><i class="fa fa-user"></i></td>
            <td>{{first_name}} {{last_name}}</td>
            <td>@{{username}}</td>
            <td>{{phone}}</td>
            <td>{{email}}</td>
            <td>{{address.[0].address}}</td>
            <td>
                <a onclick="return confirm('Are you sure to block @{{username}} ?')" href="/admins/block_user/{{_id}}" role="button" class="btn btn-danger"><i class="fa fa-ban" title="block"></i></a>
                <a onclick="return confirm('Are you sure to delete @{{username}} ?')" href="/admins/delete_user/{{_id}}" role="button" class="btn btn-danger"><i class="fa fa-trash" title="delete"></i></a>
            </td>
        </tr> 
                
    {{/if}}        
           
        </tr>
    {{/each}}
  </tbody>
</table>
</div>

