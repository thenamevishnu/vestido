<style>
    .error-button{
        border: none;
        border-radius: 7px;
        background-color: rgb(0, 22, 168);
        color: rgb(255, 255, 255);
    }
</style>


       
    <div class="container mx-auto text-center position-absolute start-50 top-50 translate-middle">
    
            <img src="/images/error-500_f9bbb4.png" alt="error-500_f9bbb4" class="mb-3">
    
            {{#eq err_code 404}}
                <h5 class="mb-5 fw-bold">Unfortunately the page you are looking for has been moved or deleted</h5>
            {{else}}
                <h5 class="mb-5 fw-bold">Something went wrong... ({{err_code}} : {{error.message}})</h5>
            {{/eq}}
        
            {{#if admin}}
                <button class="error-button p-2" onclick="location.href='/admins'">GO TO DASHBOARD</button>
            {{else}}
                <button class="error-button p-2" onclick="location.href='/shop'">GO BACK TO SHOP</button>
            {{/if}}
       
    </div>

      

   


