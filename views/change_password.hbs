<div class="signup-form">
    <form name="frm" oninput="formChanged()" onsubmit="return changePassword()" action="" method="post" class="w-all mx-auto">
        <h2 class="text-center fw-bold fs-4">CHANGE PASSWORD</h2>
            <div class="form-floating mb-4 mt-3">
                <input type="password" class="form-control" id="old_password" placeholder="old_password" name="old_password" value="{{userData.old_password}}">
                <label for="old_password">Current Password</label><div><i class="text-danger remove-err">{{err.old_password}}</i></div>
            </div>
            <div class="form-floating mb-4 mt-3">
                <input type="password" class="form-control" id="password" placeholder="password" name="password" value="{{userData.password}}">
                <label for="password">New Password</label><div><i class="text-danger remove-err">{{err.password}}</i></div>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="confirm_password" placeholder="confirm_password" name="confirm_password" value="{{userData.confirm_password}}">
                <label for="confirm_password">Confirm Password</label><div><i class="text-danger remove-err">{{err.confirm_password}}</i></div>
            </div>
            <div class="mx-auto text-center mt-3">
                <button type="submit" class="btn btn-primary btn-bg">CHANGE</button>
            </div>
        </div>
    </form>
</div>